<!--

	Main configuration of Membrane

	Have a look at:
	https://www.membrane-soa.org/service-proxy-doc/4.4/configuration/samples.htm

	In the /examples/* folders are working samples for proxies.xml

	Changes to this file will be picked up almost instantly if Membrane is
	running	once this file has been saved.

-->
<spring:beans xmlns="http://membrane-soa.org/proxies/1/"
			  xmlns:spring="http://www.springframework.org/schema/beans"
			  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			  xsi:schemaLocation="http://www.springframework.org/schema/beans
	                    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
	                    http://membrane-soa.org/proxies/1/ http://membrane-soa.org/schemas/proxies-1.xsd">

	<router>

		<!-- Proxy for outgoing connections if you do not have direct Internet
		<httpClientConfig>
			<proxy host="proxy.mycompany.example" port="3128" />
		</httpClientConfig>
		-->

		<!-- Forwards HTTP requests on port 2001 to www.membrane-soa.org. -->
		<serviceProxy name="localhost" port="2001" >
			<target host="www.membrane1-soa.org" port="80"/>
		</serviceProxy>

		<!-- Sets up the Administration Web Interface on port 9000
         Open http://localhost:9000 an log in as admin with password membrane
		-->
		<serviceProxy name="Console" port="9000">
			<basicAuthentication>
				<user name="admin" password="membrane" />
			</basicAuthentication>
			<accessControl file="acl.xml" />
			<adminConsole />
		</serviceProxy>

	</router>

</spring:beans>
